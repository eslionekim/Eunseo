##9주차 연습문제_로그 아웃 처리

# login.js-> if (logoutBtn) 수정
if (logoutBtn) {
    logoutBtn.addEventListener('click', function () {
        // 쿠키와 세션 삭제
        session_del();
        logout_count();

        // JWT 토큰 삭제
        localStorage.removeItem('jwt_token'); //웹 브라우저 localStorage에서 jwt_token삭제
        alert("로그아웃 완료: JWT 토큰이 삭제되었습니다.");
    });
}